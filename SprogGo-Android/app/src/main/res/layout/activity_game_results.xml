<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sproggo.sproggo.GameResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points:"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/score_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="100sp"/>

        </LinearLayout>

        <ListView
            android:id="@+id/result_list_view"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct words this game: "
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="304dp" />

    <TextView
        android:id="@+id/correct_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="255dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total words this game: "
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="134dp" />

    <TextView
        android:id="@+id/total_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="212dp" />


    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
