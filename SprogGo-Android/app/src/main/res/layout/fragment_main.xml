<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sproggo.sproggo.MainFragment"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Category:" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Words:" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/fiveRadio"
        android:orientation="vertical"
        android:gravity="center">

        <RadioButton
            android:id="@+id/fiveRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Words" />

        <RadioButton
            android:id="@+id/tenRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Words" />

        <RadioButton
            android:id="@+id/fithteenRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Words" />
    </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready," />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set..." />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SprogGo" />


</LinearLayout>
